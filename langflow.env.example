# Langflow Environment Configuration
# This file configures the Langflow backend for Process Designer Dashboard
#
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env: copy langflow.env.example .env
# 2. Start Langflow: uv run langflow run --env-file .env

# =============================================================================
# Authentication Settings
# =============================================================================

# Auto-login: Automatically log in users as superuser in the visual editor
# Set to False in production for proper user management
LANGFLOW_AUTO_LOGIN=True

# Skip authentication for API requests when auto-login is enabled
# Required for Process Designer Dashboard frontend to work without manual login
LANGFLOW_SKIP_AUTH_AUTO_LOGIN=True

# Superuser credentials (used when AUTO_LOGIN is True or for CLI access)
LANGFLOW_SUPERUSER=admin
LANGFLOW_SUPERUSER_PASSWORD=admin

# Secret key for encrypting sensitive data (generate a new one for production)
# To generate: python -c "from secrets import token_urlsafe; print(token_urlsafe(32))"
LANGFLOW_SECRET_KEY=process-designer-dev-secret-key-change-in-production

# =============================================================================
# Server Settings
# =============================================================================

# Host and port
LANGFLOW_HOST=0.0.0.0
LANGFLOW_PORT=7860

# Run backend only (no built-in frontend - we use Process Designer Dashboard)
LANGFLOW_BACKEND_ONLY=True

# Don't open browser automatically
LANGFLOW_OPEN_BROWSER=False

# =============================================================================
# Database Settings
# =============================================================================

# Save database in config directory
LANGFLOW_SAVE_DB_IN_CONFIG_DIR=True

# =============================================================================
# CORS Settings (for cross-origin frontend access)
# =============================================================================

# Allow all origins in development (restrict in production)
LANGFLOW_CORS_ORIGINS=*
LANGFLOW_CORS_ALLOW_CREDENTIALS=True
LANGFLOW_CORS_ALLOW_HEADERS=*
LANGFLOW_CORS_ALLOW_METHODS=*

# =============================================================================
# Feature Settings
# =============================================================================

# Auto-save flows
LANGFLOW_AUTO_SAVING=True
LANGFLOW_AUTO_SAVING_INTERVAL=1000

# Create starter projects
LANGFLOW_CREATE_STARTER_PROJECTS=True

# =============================================================================
# Telemetry (optional)
# =============================================================================

# Disable telemetry if desired
# DO_NOT_TRACK=True

